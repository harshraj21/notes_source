<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">

    <Button
        android:id="@+id/update"
        android:layout_width="129dp"
        android:layout_height="61dp"
        android:text="Update Now"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.904"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clogwv"
        app:layout_constraintVertical_bias="0.613" />

    <TextView
        android:id="@+id/sversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server Version: "
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/cversion"
        app:layout_constraintEnd_toStartOf="@+id/update"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clogwv"
        app:layout_constraintVertical_bias="0.746" />

    <TextView
        android:id="@+id/cversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Version: "
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/update"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clogwv"
        app:layout_constraintVertical_bias="0.777" />

    <WebView
        android:id="@+id/clogwv"
        android:layout_width="match_parent"
        android:layout_height="550sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

</androidx.constraintlayout.widget.ConstraintLayout>